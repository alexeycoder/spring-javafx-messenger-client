<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.textfield.TextFields?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
	minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
	xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="edu.alexey.messengerclient.controllers.MainController">
	<children>
		<HBox spacing="20.0" VBox.vgrow="NEVER">
			<children>
				<Button fx:id="buttonAdd" mnemonicParsing="false"
					onAction="#actionButtonPressed" text="%add" />
				<Button fx:id="buttonEdit" mnemonicParsing="false"
					onAction="#actionButtonPressed" text="%edit" />
				<Button fx:id="buttonDelete" mnemonicParsing="false"
					onAction="#actionButtonPressed" text="%delete" />
			</children>
		</HBox>
		<GridPane hgap="20.0" VBox.vgrow="NEVER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					maxWidth="1.7976931348623157E308" />
				<ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="32.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<TextFields fx:id="textFieldSearch" prefHeight="32.0"
					styleClass="search-text-field"
					fx:factory="createClearableTextField" />
				<Button fx:id="buttonSearch" mnemonicParsing="false"
					text="%search"
					GridPane.columnIndex="1" />
			</children>
		</GridPane>
		<AnchorPane VBox.vgrow="ALWAYS">
			<children>
				<TableView fx:id="tableAddressBook"
					onMouseClicked="#actionTableClicked" prefHeight="200.0"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
					<columns>
						<TableColumn fx:id="columnFullName"
							maxWidth="1.7976931348623157E308" prefWidth="-1.0"
							text="%fullname" />
						<TableColumn fx:id="columnPhone"
							maxWidth="1.7976931348623157E308" prefWidth="-1.0"
							text="%phone" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>
		</AnchorPane>
		<AnchorPane>
			<children>
				<Pagination fx:id="pagination" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" />
			</children>
		</AnchorPane>
		<BorderPane VBox.vgrow="NEVER">
			<left>
				<Label fx:id="labelCount" text="%main.records_count"
					BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets right="10.0" />
					</BorderPane.margin>
				</Label>
			</left>
			<right>
				<ComboBox fx:id="comboLocale" minWidth="100.0"
					onAction="#comboLangChanged" BorderPane.alignment="CENTER">
					<BorderPane.margin>
						<Insets left="10.0" />
					</BorderPane.margin>
				</ComboBox>
			</right>
		</BorderPane>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
	<stylesheets>
		<URL value="@style.css" />
	</stylesheets>
</VBox>
