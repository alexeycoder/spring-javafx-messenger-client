<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="607.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/22"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="edu.alexey.messengerclient.controllers.FindContactController">
	<children>
		<GridPane hgap="10.0" vgap="10.0">
			<columnConstraints>
				<ColumnConstraints halignment="RIGHT" hgrow="ALWAYS"
					minWidth="10.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="%ui.dialog.find_contact.find_by" />
				<ComboBox fx:id="comboBoxFindBy"
					maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" />
				<TextField fx:id="textFieldTextToFind" alignment="CENTER"
					promptText="%ui.dialog.find_contact.text_field_prompt"
					GridPane.rowIndex="1" />
				<Button fx:id="buttonFind" defaultButton="true"
					maxWidth="1.7976931348623157E308" mnemonicParsing="false"
					text="%ui.find" GridPane.columnIndex="1"
					GridPane.rowIndex="1" />
			</children>
			<VBox.margin>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</VBox.margin>
		</GridPane>
		<Label text="%ui.dialog.find_contact.search_result" VBox.vgrow="NEVER" />
		<StackPane VBox.vgrow="ALWAYS">
			<VBox.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</VBox.margin>
			<children>
				<ListView fx:id="listViewSearchResult" prefHeight="200.0"
					prefWidth="200.0" visible="false" />
				<Label fx:id="labelNothingFound"
					text="%ui.dialog.find_contact.nothing_found" visible="false" />
			</children>
		</StackPane>
		<HBox alignment="CENTER" spacing="16.0">
			<children>
				<Button fx:id="buttonAddToConversations" mnemonicParsing="false"
					text="%ui.dialog.find_contact.add_to_conversations"
					onAction="#actionFind" />
				<Button cancelButton="true" mnemonicParsing="false"
					text="%ui.cancel" onAction="#actionClose" />
			</children>
			<padding>
				<Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
			</padding>
		</HBox>
	</children>
</VBox>
